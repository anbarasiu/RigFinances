<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anilicious.rigfinances.finances" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/vouchers"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.anilicious.rigfinances.activities.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.anilicious.rigfinances.activities.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.anilicious.rigfinances.activities.VouchersActivity"
            android:label="@string/title_activity_vouchers" >
        </activity>
        <activity
            android:name="com.anilicious.rigfinances.activities.BoreEntryActivity"
            android:label="@string/title_activity_bore_entry" >
        </activity>
        <activity
            android:name="com.anilicious.rigfinances.activities.EmployeeDetailsActivity"
            android:label="@string/title_activity_employee_details" >
        </activity>
        <activity
            android:name="com.anilicious.rigfinances.activities.ReportsActivity"
            android:label="@string/title_activity_reports" >
        </activity>
        <activity
            android:name="com.anilicious.rigfinances.activities.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
    </application>

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>